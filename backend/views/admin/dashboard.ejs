<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Tableau de Bord Admin</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .admin-navbar {
      background-color: #343a40;
      color: white;
      margin-bottom: 30px;
    }
    .dashboard-card {
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      transition: transform 0.3s;
    }
    .dashboard-card:hover {
      transform: translateY(-5px);
    }
    .card-header {
      background-color: #343a40;
      color: white;
    }
  </style>
</head>
<body>
  <!-- Navbar Admin -->
  <nav class="navbar admin-navbar">
    <div class="container">
      <a class="navbar-brand text-white" href="/admin/dashboard">Tableau de bord Admin</a>
      <div class="d-flex">
        <% if (user) { %>
          <span class="navbar-text me-3">Connecté en tant que <%= user.username %></span>
        <% } %>
        <a href="/admin/logout" class="btn btn-outline-light btn-sm">Déconnexion</a>
      </div>
    </div>
  </nav>

  <div class="container">
    <h1 class="mb-4">Tableau de Bord Administrateur</h1>
    
    <div class="row mb-4">
      <div class="col-md-4">
        <div class="card dashboard-card">
          <div class="card-header">Événements en attente</div>
          <div class="card-body">
            <h2 class="card-title"><%= stats.pendingEventsCount %></h2>
            <a href="/admin/moderation/pending" class="btn btn-primary">Voir les événements</a>
          </div>
        </div>
      </div>
      
      <div class="col-md-4">
        <div class="card dashboard-card">
          <div class="card-header">Total des événements</div>
          <div class="card-body">
            <h2 class="card-title"><%= stats.totalEventsCount %></h2>
            <a href="/admin/events" class="btn btn-primary">Gérer les événements</a>
          </div>
        </div>
      </div>
      
      <div class="col-md-4">
        <div class="card dashboard-card">
          <div class="card-header">Total des organisateurs</div>
          <div class="card-body">
            <h2 class="card-title"><%= stats.totalOrganizersCount %></h2>
            <a href="/admin/organizers" class="btn btn-primary">Gérer les organisateurs</a>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Actions rapides -->
    <div class="row mb-4">
      <div class="col-12">
        <div class="card dashboard-card">
          <div class="card-header">Actions rapides</div>
          <div class="card-body">
            <div class="d-flex gap-2">
              <a href="/admin/moderation/pending" class="btn btn-warning">Valider des événements</a>
              <a href="/admin/events/create" class="btn btn-success">Créer un événement</a>
              <a href="/admin/users" class="btn btn-info">Gérer les utilisateurs</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>